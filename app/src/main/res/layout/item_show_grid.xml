<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_show"
    android:layout_marginStart="@dimen/spacing_1x"
    android:layout_marginEnd="@dimen/spacing_1x"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/showCardView"
        android:layout_width="160dp"
        android:layout_height="225dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/showImageView"
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:contentDescription="@string/movie_poster"
            android:src="@drawable/ic_image_placeholder" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/showTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/subtitle_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/showCardView"
        app:layout_constraintStart_toStartOf="@+id/showCardView"
        app:layout_constraintTop_toBottomOf="@id/showCardView"
        tools:text="Title of the show" />
</androidx.constraintlayout.widget.ConstraintLayout>