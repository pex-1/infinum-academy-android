<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_1x">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_placeholder_user_1" />

    <TextView
        android:id="@+id/usernameTextComments"
        app:layout_goneMarginStart="@dimen/spacing_1x"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Andrei"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/userComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_3x"
        android:layout_marginEnd="8dp"
        android:lineHeight="22dp"
        android:textSize="14sp"
        android:textColor="#3b4354"
        android:text="Well, this episode really sucks. Such a time wasting."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/usernameTextComments"
        app:layout_constraintTop_toTopOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>