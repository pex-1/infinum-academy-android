<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".episodes.EpisodesActivity">

    <androidx.appcompat.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/toolbarEpisodes"
            app:title="@string/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/showDescriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarEpisodes"
            android:textColor="@color/subtitle_text"
            android:textSize="16sp"
            app:lineHeight="24sp"/>
    <TextView
            android:text="@string/episodes"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/episodesTextView"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/showDescriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="#2e2e2e"
            android:textSize="20sp"/>

    <LinearLayout
            android:id="@+id/noShowsLinearLayout"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/episodesTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_marginTop="33dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_placeholder_episodes"/>

        <TextView
                android:text="@string/asleep"
                android:textAlignment="center"
                android:id="@+id/addEpisodesTextView"
                android:layout_marginTop="14dp"
                android:textColor="@color/subtitle_text"
                android:textSize="15sp"
                app:lineHeight="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/add_some_episodes"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:id="@+id/addEpisodesClickableTextView"
                android:textColor="@color/main_color"
                android:background="?attr/selectableItemBackground"
                android:textAlignment="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:divider="@null"
            android:id="@+id/episodesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/episodesTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/episodesFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:src="@drawable/ic_add_24dp"
            android:backgroundTint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>